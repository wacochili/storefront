    <section>
      <div class="row">
        <div class="col-sm-9">
          <div class="taco_single">
            <h1>Create a new taco:</h1>

            <%= form_tag '/tacos', method: :post do %>

            <div>
              <%= label_tag :name %>
              <%= text_field_tag :name %>
            </div>
            <div>
              <%= label_tag :price %>
              <%= text_field_tag :price %>
            </div>
            <div>
              <%= label_tag :image_1 %>
              <%= text_field_tag :image_1 %>
            </div>
            <div>
              <%= label_tag :image_2 %>
              <%= text_field_tag :image_2 %>
            </div>
            <div>
              <%= label_tag :description %>
              <%= text_field_tag :description %>
            </div>
            <div>
              <%= label_tag :rating %>
              <%= text_field_tag :rating %>
            </div>
            <div>
              <%= label_tag :supplier %>
              <%= text_field_tag :supplier %>
            </div>
            <%= submit_tag "Add Taco" %>
            <% end %>
          </div>
        </div>
      </div>
    </section>
